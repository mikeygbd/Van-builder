<head>
  <link rel="stylesheet" href="/css/individual_post.css">
</head>
<header>
  <div id="navbar" class="light-fade">
    <div class="wrapper">

      <div id="account">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><img src="/img/user.png" width=30 alt="user"></a>
        <ul class="dropdown-menu">
            <li><a href="/logout">Logout</a></li>
            <li><a href="/users/<%= current_user.id %>/delete">Delete Account</a></li>
      </ul>
      </div>
    <%= render "layouts/nav" %>
    </div>
  </div>
  </header>
  <body>


<form class="post shadow">
  <div id="contact"
    <h2><strong><%= @post.title %></strong> </h2><br><br>
    <%= @post.embed.html_safe %><br><br>

    <div class="description">
    <h4><%= @post.description %></h4>
    </div>
    <h2>Comments:</h2>
    <% @post.comments.each do |comment| %>
    <%= link_to comment.user.email, user_path(comment.user) %> said: <%= comment.content %>
    <% end %>
    <br>
    <a href="/posts/<%= @post.id %>/edit">Edit</a>
    &nbsp; | &nbsp;
    <a href="/posts/<%= @post.id %>/delete">Delete</a>
  </div>
</form>
</body>
